set tabstop=4
set shiftwidth=4
"set expandtab
"set smarttab
set showmatch
set smartcase
set backspace=2
set autoindent
set formatoptions=c,q,r,t
set laststatus=2
autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions-=o
let loaded_matchparen = 1
set mouse=a
set nohlsearch
set number
syntax on
colorscheme elflord
